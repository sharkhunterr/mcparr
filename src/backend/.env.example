# MCParr AI Gateway - Backend Configuration
# Copy this file to .env and customize the values

# Application
APP_NAME=MCParr AI Gateway
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
MCP_PORT=8001

# Database - SQLite (default) or PostgreSQL
DATABASE_URL=sqlite+aiosqlite:///./data/mcparr.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@YOUR_DB_HOST:5432/mcparr

# Redis (optional, for caching)
REDIS_URL=redis://YOUR_REDIS_HOST:6379
CACHE_TTL=300

# CORS - Add your frontend URLs
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://YOUR_FRONTEND_HOST:5173"]

# Security
SECRET_KEY=change-this-to-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services - Configure your homelab service URLs and API keys
# Plex
PLEX_URL=http://YOUR_PLEX_HOST:32400
PLEX_TOKEN=your-plex-token

# Overseerr
OVERSEERR_URL=http://YOUR_OVERSEERR_HOST:5055
OVERSEERR_API_KEY=your-overseerr-api-key

# Zammad (Ticketing)
ZAMMAD_URL=http://YOUR_ZAMMAD_HOST:3000
ZAMMAD_TOKEN=your-zammad-token

# Tautulli
TAUTULLI_URL=http://YOUR_TAUTULLI_HOST:8181
TAUTULLI_API_KEY=your-tautulli-api-key

# Authentik
AUTHENTIK_URL=http://YOUR_AUTHENTIK_HOST:9000
AUTHENTIK_TOKEN=your-authentik-token

# Open WebUI
OPEN_WEBUI_URL=http://YOUR_OPENWEBUI_HOST:8080
OPEN_WEBUI_API_KEY=your-openwebui-api-key

# Ollama
OLLAMA_URL=http://YOUR_OLLAMA_HOST:11434
OLLAMA_MODEL=llama2

# Training Worker (GPU fine-tuning)
TRAINING_WORKER_URL=http://YOUR_WORKER_HOST:8088
TRAINING_WORKER_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Docker
DOCKER_SOCKET=/var/run/docker.sock

# Alerts (optional)
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_HOST=
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USER=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=
